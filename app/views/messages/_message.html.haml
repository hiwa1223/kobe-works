.message{data: {message_id: message.id}}
  .chat-main__message__title
    .chat-main__message__title__name
      = message.user.name
    .chat-main__message__title__date
      = message.created_at
  .chat-main__message__contents
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?